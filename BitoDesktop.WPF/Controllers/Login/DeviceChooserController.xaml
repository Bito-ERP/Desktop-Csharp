<UserControl
    x:Class="BitoDesktop.WPF.Controllers.Login.DeviceChooserController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Controllers.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="360"
    Height="450"
    mc:Ignorable="d">
    <Border Background="#FFFFFF" CornerRadius="20">
        <StackPanel>
            <TextBlock
                Margin="15"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="DemiBold"
                Text="Qurilma" />
            <ScrollViewer
                HorizontalAlignment="Center"
                HorizontalScrollBarVisibility="Hidden"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="DeviceItemsControl" />
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>
