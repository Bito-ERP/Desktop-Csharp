<UserControl
    x:Class="BitoDesktop.WPF.Controllers.Login.OrganizatinController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="360"
    Height="264"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignOutlinedComboBox}" TargetType="ComboBox">
            <Setter Property="Width" Value="312" />
            <Setter Property="Height" Value="56" />
            <Setter Property="Margin" Value="15" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="15" />
        </Style>
    </UserControl.Resources>
    <Border Background="White" CornerRadius="20">
        <StackPanel HorizontalAlignment="Center">
            <ComboBox x:Name="OrgCmb" md:HintAssist.Hint="Organzatsiya" />
            <ComboBox x:Name="WarehouseCmb" md:HintAssist.Hint="Ombor" />
            <ComboBox x:Name="PriceCmb" md:HintAssist.Hint="Narx" />
        </StackPanel>
    </Border>
</UserControl>
