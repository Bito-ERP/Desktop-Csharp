<UserControl
    x:Class="BitoDesktop.WPF.Controllers.Pos.PosPagesController"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Controllers.Pos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="147"
    Height="42"
    mc:Ignorable="d">
    <Border
        x:Name="TicketChooseBtn"
        Background="#006AFF"
        CornerRadius="20"
        Cursor="Hand"
        MouseDown="TicketChooseBtn_MouseDown">
        <Grid>
            <TextBlock
                x:Name="PageNameTxt"
                Margin="15,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Sotuv" />
            <md:PackIcon
                x:Name="ClosePageBtn"
                Width="20"
                Height="20"
                Margin="15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Cursor="Hand"
                Foreground="White"
                Kind="CloseCircle"
                MouseDown="ClosePageBtn_MouseDown" />

        </Grid>
    </Border>
</UserControl>
