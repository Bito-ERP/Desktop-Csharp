<Page
    x:Class="BitoDesktop.WPF.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:stage="clr-namespace:BitoDesktop.WPF.Controllers.Login"
    Title="LoginPage"
    MinWidth="540"
    MinHeight="450"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Grid>
        <ItemsControl
            x:Name="LoginStageControl"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <stage:LoginController Loaded="LoginController_Loaded" />
        </ItemsControl>
        <TextBlock
            x:Name="DateTimeTxt"
            Margin="15"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25" />
        <Border
            Height="15"
            VerticalAlignment="Bottom"
            Background="#DCE1E4" />
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Text="OOO UNICAL, 129b Amir Temur shoh ko'chasi, www.unical.uz, +998971234567" />
    </Grid>
</Page>
