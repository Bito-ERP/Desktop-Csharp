<Page
    x:Class="BitoDesktop.WPF.Pages.Pos.NumberPadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Pages.Pos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="NumberPadPage"
    MinWidth="540"
    MinHeight="450"
    Background="#80000000"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Style BasedOn="{StaticResource MaterialDesignRaisedButton}" TargetType="Button">
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="md:ButtonAssist.CornerRadius" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="md:ElevationAssist.Elevation" Value="Dp0" />
        </Style>
    </Page.Resources>
    <Border
        Width="372"
        Height="532"
        Background="White"
        CornerRadius="20">
        <Grid Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="PriceTxt"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Width="212"
                Height="56"
                Margin="24,9,12,8"
                VerticalContentAlignment="Center"
                Background="#F5F5F5"
                BorderThickness="0"
                FontSize="15"
                FontWeight="DemiBold"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" />
            <ComboBox
                x:Name="CurrenciesCb"
                Grid.Column="2"
                Width="100"
                Height="56"
                HorizontalAlignment="Left"
                Background="#F5F5F5"
                BorderThickness="0"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            <Button
                Grid.Row="1"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="1" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Click="Button_Click"
                Content="2" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Click="Button_Click"
                Content="3" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="4" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Click="Button_Click"
                Content="5" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Click="Button_Click"
                Content="6" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="7" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Click="Button_Click"
                Content="8" />
            <Button
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Click="Button_Click"
                Content="9" />
            <Button
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="." />
            <Button
                Grid.Row="4"
                Grid.Column="1"
                Click="Button_Click"
                Content="0" />
            <Button
                x:Name="BackspaseBtn"
                Grid.Row="4"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Click="BackspaseBtn_Click">
                <md:PackIcon Kind="Backspace" />
            </Button>
            <Button
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Click="Button_Click"
                Content="000" />
            <Button
                Grid.Row="5"
                Grid.Column="1"
                Click="Button_Click"
                Content="00" />
            <Button
                x:Name="ClearBtn"
                Grid.Row="5"
                Grid.Column="2"
                HorizontalAlignment="Left"
                Click="ClearBtn_Click"
                Content="C" />

            <Button
                x:Name="SaveAndCloseBtn"
                Grid.Row="6"
                Grid.ColumnSpan="3"
                Width="324"
                Background="#006AFF"
                Click="SaveAndCloseBtn_Click"
                Content="Saqlash va yopish"
                Foreground="White" />
        </Grid>
    </Border>
</Page>
