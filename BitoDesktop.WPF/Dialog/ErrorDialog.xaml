<Window
    x:Class="BitoDesktop.WPF.Dialog.ErrorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="ErrorDialog"
    Width="250"
    Height="150"
    md:ElevationAssist.Elevation="Dp12"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Background="White"
        BorderBrush="#006AFF"
        BorderThickness="1"
        CornerRadius="20">
        <Grid>
            <StackPanel>
                <md:PackIcon
                    Width="40"
                    Height="40"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Foreground="Red"
                    Kind="Error" />
                <TextBlock
                    x:Name="ErrorMessage"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontSize="14"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
