<Window
    x:Class="BitoDesktop.WPF.Dialog.SuccessSinchReceiptDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BitoDesktop.WPF.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="SuccessSinchReceiptDialog"
    Width="500"
    Height="48"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Opacity="0.8"
                ShadowDepth="0" />
        </Border.Effect>
        <Grid>
            <md:PackIcon
                Width="24"
                Height="24"
                Margin="5"
                VerticalAlignment="Center"
                Foreground="#1CBD5D"
                Kind="CheckCircle" />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="DemiBold"
                Text="Cheklar muvaffaqiyatli sinxron qilindi" />
        </Grid>
    </Border>
</Window>
